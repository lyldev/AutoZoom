{
  "applications": {
    "gecko": {
      "strict_min_version": "58.0a1"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/zoom-in-19.png",
      "38": "icons/zoom-in-38.png"
    },
    "default_title": "AutoZoom",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  
  "description": "Auto zoom for every new tab.",
  "manifest_version": 2,
  "name": "AutoZoom",
  "permissions": [
    "tabs",
    "storage"
  ],
  "version": "1.1.1"
}
